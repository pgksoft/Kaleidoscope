<UserControl x:Class="Kaleidoscope.View.PaletteTheme"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kaleidoscope.View"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <StackPanel Orientation="Horizontal">
        <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource helper}, Path=[SettingOptionsRes.PaletteThemeLightText]}"/>
        <ToggleButton Margin="5 0 5 0" IsChecked="{Binding IsDark}" />
        <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource helper}, Path=[SettingOptionsRes.PaletteThemeDarkText]}"/>
    </StackPanel>
</UserControl>
